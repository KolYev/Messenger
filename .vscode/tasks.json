{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build Messenger (SFML, MSVC)",
            "type": "shell",
            "command": "cl",
            "args": [
                "/EHsc",
                "/std:c++17",
                "/Zi",
                "/Fe:messenger.exe",
                "main.cpp",
                "/I",
                "Libraries\\SFML-3.0.2\\include",
                "/link",
                "/LIBPATH:Libraries\\SFML-3.0.2\\lib",
                "sfml-network.lib",
                "sfml-system.lib",
                "ws2_32.lib",
                "bthprops.lib",
                "user32.lib",
                "advapi32.lib"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$msCompile"
            ]
        }
    ]
}